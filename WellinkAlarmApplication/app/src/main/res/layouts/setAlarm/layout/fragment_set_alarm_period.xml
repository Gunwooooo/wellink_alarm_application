<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.125"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.125">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/ps_bold"
            android:gravity="center"
            android:text="OO약을\n주기적으로 드시나요?"
            android:textColor="@color/toss_black_700"
            android:textSize="28sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.125"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.115"
        android:orientation="horizontal"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.04"/>
        <LinearLayout
            android:layout_weight="0.44"
            android:layout_width="0dip"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/setAlarmPeriod_btn_first"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_border_blue"
                android:fontFamily="@font/ps_regular"
                android:stateListAnimator="@null"
                android:text="매일 먹어요"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.04"/>
        <LinearLayout
            android:layout_weight="0.44"
            android:layout_width="0dip"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/setAlarmPeriod_btn_second"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_border_gray"
                android:fontFamily="@font/ps_regular"
                android:stateListAnimator="@null"
                android:text="주기적으로 먹어요"
                android:textColor="@color/toss_black_200"
                android:textSize="18sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.04"/>
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/setAlarmPeriod_numberPicker_layout"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.384"
        android:orientation="horizontal"
        android:gravity="center">
        <NumberPicker
            android:theme="@style/numberPickerCustomSize"
            android:id="@+id/setAlarmPeriod_numberPicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="    일 마다"
            android:textSize="32sp"
            android:fontFamily="@font/ps_regular"
            android:textColor="@color/toss_black_500"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.125">
        <TextView
            android:id="@+id/setAlarmPeriod_textView_explain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="매일 알림을 울려드릴게요!"
            android:fontFamily="@font/ps_regular"
            android:textColor="@color/toss_black_500"
            android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
        android:visibility="visible"
        android:id="@+id/setAlarmPeriod_space_layout"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.384"
        android:orientation="horizontal"/>
    <Button
        android:id="@+id/setAlarmPeriod_btn_next"
        android:layout_width="380dp"
        android:layout_height="73dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/btn_border_blue"
        android:fontFamily="@font/ps_regular"
        android:stateListAnimator="@null"
        android:text="다음"
        android:textColor="@color/white"
        android:textSize="20sp" />
</LinearLayout>