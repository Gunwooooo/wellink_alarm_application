<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.285">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="몇 시에 알려드릴까요?"
            android:textColor="@color/toss_black_700"
            android:fontFamily="@font/ps_bold"
            android:gravity="center"
            android:textSize="28sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.105"/>

    <androidx.cardview.widget.CardView
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/setAlarmTime_cardView_morning"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:backgroundTint="@color/StatusBarColor"
        app:cardCornerRadius="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardElevation="13dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.1" />

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.1333">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="아침"
                    android:gravity="center"
                    android:textColor="@color/toss_black_700"
                    android:fontFamily="@font/ps_bold"
                    android:textSize="20sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.1"/>
            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.35">
                <TextView
                    android:id="@+id/setAlarmTime_textView_mTime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="오전 7:00"
                    android:gravity="left|center_vertical"
                    android:textColor="@color/toss_black_700"
                    android:fontFamily="@font/ps_bold"
                    android:textSize="24sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.2167">
                <Switch
                    android:id="@+id/setAlarmTime_switch_morning"
                    tools:ignore="UseSwitchCompatOrMaterialXml"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.1"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/setAlarmTime_cardView_afternoon"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:backgroundTint="@color/StatusBarColor"
        app:cardCornerRadius="16dp"
        android:layout_margin="16dp"
        app:cardElevation="13dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.1"/>
            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.1333">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="점심"
                    android:gravity="center"
                    android:textColor="@color/toss_black_700"
                    android:fontFamily="@font/ps_bold"
                    android:textSize="20sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.1"/>
            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.35">
                <TextView
                    android:id="@+id/setAlarmTime_textView_aTime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="오후 12:30"
                    android:gravity="left|center_vertical"
                    android:textColor="@color/toss_black_700"
                    android:fontFamily="@font/ps_bold"
                    android:textSize="24sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.2167">
                <Switch
                    android:id="@+id/setAlarmTime_switch_afternoon"
                    tools:ignore="UseSwitchCompatOrMaterialXml"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.1"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/setAlarmTime_cardView_evening"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:backgroundTint="@color/StatusBarColor"
        app:cardCornerRadius="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardElevation="13dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.1"/>
            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.1333">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="저녁"
                    android:gravity="center"
                    android:textColor="@color/toss_black_700"
                    android:fontFamily="@font/ps_bold"
                    android:textSize="20sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.1"/>
            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.35">
                <TextView
                    android:id="@+id/setAlarmTime_textView_eTime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="오후 6:30"
                    android:gravity="left|center_vertical"
                    android:textColor="@color/toss_black_700"
                    android:fontFamily="@font/ps_bold"
                    android:textSize="24sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.2167">
                <Switch
                    android:id="@+id/setAlarmTime_switch_evening"
                    tools:ignore="UseSwitchCompatOrMaterialXml"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.1"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/setAlarmTime_cardView_night"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:backgroundTint="@color/StatusBarColor"
        app:cardCornerRadius="16dp"
        android:layout_margin="16dp"
        app:cardElevation="13dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.1"/>
            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.1833">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="취침전"
                    android:gravity="center"
                    android:textColor="@color/toss_black_700"
                    android:fontFamily="@font/ps_bold"
                    android:textSize="20sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.05"/>
            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.35">
                <TextView
                    android:id="@+id/setAlarmTime_textView_nTime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="오후 10:00"
                    android:gravity="left|center_vertical"
                    android:textColor="@color/toss_black_700"
                    android:fontFamily="@font/ps_bold"
                    android:textSize="24sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.2167">
                <Switch
                    android:id="@+id/setAlarmTime_switch_night"
                    tools:ignore="UseSwitchCompatOrMaterialXml"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.1"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.18">
        <TextView
            android:id="@+id/setAlarmTime_textView_explain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="시간을 설정하고 스위치를 켜주세요!"
            android:fontFamily="@font/ps_regular"
            android:textColor="@color/toss_black_500"
            android:textSize="18sp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.227"/>

    <Button
        android:id="@+id/setAlarmTime_btn_next"
        android:layout_width="380dp"
        android:layout_height="73dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/btn_border_blue"
        android:fontFamily="@font/ps_regular"
        android:stateListAnimator="@null"
        android:text="설정 완료"
        android:textColor="@color/white"
        android:textSize="20sp" />
</LinearLayout>