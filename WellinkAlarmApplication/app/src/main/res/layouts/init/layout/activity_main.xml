<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white">


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/main_viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/main_indicator"/>


    <me.relex.circleindicator.CircleIndicator3
        android:id="@+id/main_indicator"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:ci_drawable="@drawable/ic_baseline_circle_24"
        app:layout_constraintTop_toBottomOf="@id/main_viewPager"
        app:ci_height="7dp"
        app:ci_margin="4dp"
        app:ci_width="7dp" />

    <Button
        android:layout_margin="16dp"
        android:id="@+id/main_btn_start"
        android:stateListAnimator="@null"
        android:background="@drawable/btn_border_blue"
        android:fontFamily="@font/ps_regular"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:text="시작하기"
        android:textSize="22dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/main_indicator"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>