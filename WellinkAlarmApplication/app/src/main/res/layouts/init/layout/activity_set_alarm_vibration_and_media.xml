<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.5"/>

    <TextView
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:id="@+id/setAlarmVibrationAndMedia_textView_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ps_bold"
        android:gravity="center"
        android:text="알림의 진동과 소리를 설정해주세요."
        android:textColor="@color/toss_black_700"
        android:textSize="22dp" />


    <TextView
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ps_regular"
        android:gravity="center"
        android:text="나중에 설정에서 변경이 가능해요."
        android:textColor="@color/toss_black_200"
        android:textSize="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="18dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="벨소리"
                    android:textSize="21dp"
                    android:fontFamily="@font/ps_regular"
                    android:textColor="@color/toss_black_700"/>
                <Switch
                    android:id="@+id/setAlarmVibrationAndMedia_switch_media"
                    tools:ignore="UseSwitchCompatOrMaterialXml"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="진동"
                    android:textSize="21dp"
                    android:fontFamily="@font/ps_regular"
                    android:textColor="@color/toss_black_700"/>
                <Switch
                    android:id="@+id/setAlarmVibrationAndMedia_switch_vibration"
                    tools:ignore="UseSwitchCompatOrMaterialXml"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:checked="true"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.5"
        android:orientation="horizontal" />

    <Button
        android:id="@+id/setAlarmVibrationAndMedia_btn_next"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/btn_border_blue"
        android:fontFamily="@font/ps_regular"
        android:stateListAnimator="@null"
        android:text="복약 알림 설정하기"
        android:textColor="@color/white"
        android:textSize="20dp" />
</LinearLayout>