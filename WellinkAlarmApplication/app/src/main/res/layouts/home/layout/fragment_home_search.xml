<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.HomeSearchFragment"
    android:orientation="vertical"
    android:weightSum="1"
    android:layout_margin="16dp">


    <EditText
        android:id="@+id/homeSearch_editText"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:padding="13dp"
        android:textSize="18sp"
        android:drawableEnd="@drawable/ic_baseline_search_24"
        android:fontFamily="@font/ps_regular"
        android:hint="의약품명을 입력해주세요(ex 아스피린)"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/search_edittext_border"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/layout_bottom_border"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.recyclerview.widget.RecyclerView
            android:scrollbars="vertical"
            android:id="@+id/homeSearch_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>