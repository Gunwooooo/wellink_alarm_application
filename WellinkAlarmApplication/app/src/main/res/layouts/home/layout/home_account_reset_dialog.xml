<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="380dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/calendar_dialog_background"
    android:padding="16dp"
    android:backgroundTint="@color/white">
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="모든 데이터를 초기화 할까요?"
            android:textSize="20sp"
            android:fontFamily="@font/ps_bold"
            android:textColor="@color/toss_black_700"/>
        <TextView
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="* 모든 복용 정보와 알람 정보가 삭제됩니다."
            android:textSize="18sp"
            android:fontFamily="@font/ps_bold"
            android:textColor="@color/text_red_200"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center">
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.48">
            <Button
                android:id="@+id/homeAccountResetDialog_btn_negative"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_border_gray"
                android:fontFamily="@font/ps_regular"
                android:stateListAnimator="@null"
                android:text="아니요"
                android:textColor="@color/toss_black_200"
                android:textSize="18sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.04"/>
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.48">
            <Button
                android:id="@+id/homeAccountResetDialog_btn_positive"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_border_blue"
                android:fontFamily="@font/ps_regular"
                android:stateListAnimator="@null"
                android:text="예"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>