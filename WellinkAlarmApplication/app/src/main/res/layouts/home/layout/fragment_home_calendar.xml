<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:clickable="true"
    android:id="@+id/homeCalendar_linearLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:weightSum="1"
    android:orientation="vertical"
    android:focusable="true"
    android:background="@color/white">

    <!--헤더-->
    <LinearLayout
        android:padding="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:background="@android:color/transparent"
        android:orientation="horizontal">
        <LinearLayout
            android:gravity="center"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.2">
            <ImageView
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:id="@+id/homeCalendar_prevBtn"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_baseline_navigate_before_24"
                android:contentDescription="prevMonth" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.6">
            <TextView
                android:textColor="@color/toss_black_700"
                android:id="@+id/homeCalendar_textView_month"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/ps_bold"
                android:padding="16dp"
                android:text="YYYY년  MM월"
                android:textAlignment="center"
                android:textSize="21dp" />
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.2">
            <ImageView
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:id="@+id/homeCalendar_nextBtn"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_baseline_navigate_next_24"
                android:contentDescription="NextMonth" />
        </LinearLayout>
    </LinearLayout>
    <!--요일-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:fontFamily="@font/ps_bold"
            android:textColor="@color/text_red_200"
            android:text="일"
            android:textSize="16dp" />

        <TextView
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:text="월"
            android:fontFamily="@font/ps_bold"
            android:textColor="@color/toss_black_500"
            android:textSize="16dp" />

        <TextView
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:text="화"
            android:fontFamily="@font/ps_bold"
            android:textColor="@color/toss_black_500"
            android:textSize="16dp" />

        <TextView
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:text="수"
            android:textColor="@color/toss_black_500"
            android:fontFamily="@font/ps_bold"
            android:textSize="16dp" />

        <TextView
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/ps_bold"
            android:gravity="left|center_vertical"
            android:text="목"
            android:textColor="@color/toss_black_500"
            android:textSize="16dp" />

        <TextView
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:text="금"
            android:textColor="@color/toss_black_500"
            android:fontFamily="@font/ps_bold"
            android:textSize="16dp" />

        <TextView
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/text_blue_200"
            android:gravity="left|center_vertical"
            android:text="토"
            android:fontFamily="@font/ps_bold"
            android:textSize="16dp" />
    </LinearLayout>

    <!--달력뷰-->
    <androidx.recyclerview.widget.RecyclerView
        android:clickable="false"
        android:focusable="false"
        android:overScrollMode="never"
        android:id="@+id/homeCalendar_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
