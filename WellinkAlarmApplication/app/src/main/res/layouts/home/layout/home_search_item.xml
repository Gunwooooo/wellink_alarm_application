<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/homeSearchItem_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"
    android:clickable="true"
    android:focusable="true"
    android:background="?attr/selectableItemBackground"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="0.03"/>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="0.14">
        <ImageView
            android:id="@+id/homeSearchItem_imageView_item"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/cancel"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="0.03"/>

    <LinearLayout
        android:layout_weight="0.62"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:lineSpacingExtra="1dp"
            android:id="@+id/homeSearchItem_textView_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아스피린프로텍트정100mg/바이엘코리아"
            android:textSize="18sp"
            android:gravity="left"
            android:fontFamily="@font/ps_regular"
            android:textColor="@color/toss_black_700"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="0.03"/>

    <LinearLayout
        android:gravity="center"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="0.12">
        <ImageView
            android:background="?attr/selectableItemBackgroundBorderless"
            android:id="@+id/homeSearchItem_imageView_like"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_star_24"
            app:tint="@color/border_yellow_200"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="0.03"/>
</LinearLayout>