<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/calendar_dialog_background"
    android:padding="30dp"
    android:backgroundTint="@color/toss_black_100">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/layout_bottom_border">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="O일"
            android:textSize="31sp"
            android:fontFamily="@font/ps_regular"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:weightSum="1">
        <TextView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:text="아침"
            android:gravity="center_vertical"
            android:fontFamily="@font/ps_regular"
            android:textSize="18sp"/>
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.03"/>
        <TextView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:text="OO약, OO약"
            android:layout_weight="0.61"
            android:gravity="left|center_vertical"
            android:fontFamily="@font/ps_regular"
            android:textSize="16sp"/>
        <Button
            android:clickable="false"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="0dip"
            android:layout_weight="0.21"
            android:layout_height="match_parent"
            android:background="@drawable/btn_border_blue"
            android:fontFamily="@font/ps_regular"
            android:stateListAnimator="@null"
            android:text="완료"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:weightSum="1">
        <TextView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:text="점심"
            android:gravity="center_vertical"
            android:fontFamily="@font/ps_regular"
            android:textSize="18sp"/>
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.03"/>
        <TextView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:text="OO약"
            android:layout_weight="0.61"
            android:gravity="left|center_vertical"
            android:fontFamily="@font/ps_regular"
            android:textSize="18sp"/>
        <Button
            android:clickable="false"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.21"
            android:background="@drawable/btn_border_gray"
            android:fontFamily="@font/ps_regular"
            android:stateListAnimator="@null"
            android:text="미완료"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:weightSum="1">
        <TextView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:text="저녁"
            android:gravity="center_vertical"
            android:fontFamily="@font/ps_regular"
            android:textSize="18sp"/>
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.03"/>
        <TextView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:text="OO약, OO약, OO약"
            android:layout_weight="0.61"
            android:gravity="left|center_vertical"
            android:fontFamily="@font/ps_regular"
            android:textSize="18sp"/>
        <Button
            android:clickable="false"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="0dip"
            android:layout_weight="0.21"
            android:layout_height="match_parent"
            android:background="@drawable/btn_border_blue"
            android:fontFamily="@font/ps_regular"
            android:stateListAnimator="@null"
            android:text="완료"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:weightSum="1">
        <TextView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:text="취침"
            android:gravity="center_vertical"
            android:fontFamily="@font/ps_regular"
            android:textSize="18sp"/>
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.03"/>
        <TextView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:text="OO약"
            android:layout_weight="0.61"
            android:gravity="left|center_vertical"
            android:fontFamily="@font/ps_regular"
            android:textSize="18sp"/>

        <Button
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="0.21"
            android:background="@drawable/btn_border_gray"
            android:clickable="false"
            android:fontFamily="@font/ps_regular"
            android:stateListAnimator="@null"
            android:text="미완료"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>