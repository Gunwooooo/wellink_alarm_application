<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/calendar_dialog_background"
    android:padding="30dp"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/homeCalendarDialog_textView_dayOfMonth"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="O일"
            android:textSize="31sp"
            android:textColor="@color/toss_black_700"
            android:fontFamily="@font/ps_regular"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"/>
    <LinearLayout
        android:visibility="visible"
        android:id="@+id/homeCalendarDialog_layout_taken"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">
            <TextView
                android:textColor="@color/toss_black_700"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:text="아침"
                android:gravity="center_vertical"
                android:fontFamily="@font/ps_bold"
                android:textSize="23sp"/>
            <LinearLayout
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/btn_border_yellow"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.02"/>
            <TextView
                android:lineSpacingExtra="5dp"
                android:id="@+id/homeCalendarDialog_textView_morning"
                android:gravity="center_vertical"
                android:layout_width="0dip"
                android:layout_weight="0.82"
                android:layout_height="match_parent"
                android:text="OO약  OO약"
                android:textSize="21sp"
                android:textColor="@color/toss_black_150"
                android:fontFamily="@font/ps_regular"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">
            <TextView
                android:textColor="@color/toss_black_700"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:text="점심"
                android:gravity="center_vertical"
                android:fontFamily="@font/ps_bold"
                android:textSize="23sp"/>
            <LinearLayout
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/btn_border_avocado"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.02"/>
            <TextView
                android:lineSpacingExtra="5dp"
                android:id="@+id/homeCalendarDialog_textView_afternoon"
                android:gravity="center_vertical"
                android:layout_width="0dip"
                android:layout_weight="0.82"
                android:layout_height="match_parent"
                android:text="OO약  OO약"
                android:textSize="21sp"
                android:textColor="@color/toss_black_150"
                android:fontFamily="@font/ps_regular"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">
            <TextView
                android:textColor="@color/toss_black_700"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:text="저녁"
                android:gravity="center_vertical"
                android:fontFamily="@font/ps_bold"
                android:textSize="23sp"/>
            <LinearLayout
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/btn_border_pistachio"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.02"/>
            <TextView
                android:lineSpacingExtra="5dp"
                android:id="@+id/homeCalendarDialog_textView_evening"
                android:gravity="center_vertical"
                android:layout_width="0dip"
                android:layout_weight="0.82"
                android:layout_height="match_parent"
                android:text="OO약  OO약"
                android:textSize="21sp"
                android:textColor="@color/toss_black_150"
                android:fontFamily="@font/ps_regular"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">
            <TextView
                android:textColor="@color/toss_black_700"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:text="취침"
                android:gravity="center_vertical"
                android:fontFamily="@font/ps_bold"
                android:textSize="23sp"/>

            <LinearLayout
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:layout_weight="0.02"
                android:background="@drawable/btn_border_sage" />

            <TextView
                android:lineSpacingExtra="5dp"
                android:id="@+id/homeCalendarDialog_textView_night"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.82"
                android:fontFamily="@font/ps_regular"
                android:gravity="center_vertical"
                android:text="OO약  OO약"
                android:textColor="@color/toss_black_150"
                android:textSize="21sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="40dp"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="RtlHardcoded">
            <TextView
                android:gravity="center|bottom"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="• 복용    "
                android:textSize="18sp"
                android:fontFamily="@font/ps_regular"
                android:textColor="@color/toss_blue_200"/>
            <TextView
                android:gravity="center|bottom"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="• 미복용     "
                android:textSize="18sp"
                android:fontFamily="@font/ps_regular"
                android:textColor="@color/text_red_200"/>
            <TextView
                android:gravity="center|bottom"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="• 복용예정"
                android:textSize="18sp"
                android:fontFamily="@font/ps_regular"
                android:textColor="@color/toss_black_150"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/homeCalendarDialog_layout_empty"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/no_results"/>
        <TextView
            android:layout_marginTop="15dp"
            android:textColor="@color/toss_black_700"
            android:fontFamily="@font/ps_regular"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="등록된 약이 없는 날이에요."/>
        <Button
            android:layout_marginTop="25dp"
            android:padding="15dp"
            android:id="@+id/homeCalendarDialog_btn_goAlarmIntent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_border_blue"
            android:fontFamily="@font/ps_regular"
            android:stateListAnimator="@null"
            android:text="알람 등록하러 가기"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>