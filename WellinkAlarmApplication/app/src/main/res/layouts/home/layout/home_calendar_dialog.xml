<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/calendar_dialog_background"
    android:padding="25dp"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/homeCalendarDialog_textView_dayOfMonth"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="O일"
            android:textSize="31sp"
            android:textColor="@color/toss_black_700"
            android:fontFamily="@font/ps_regular"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="15dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="1">
        <TextView
            android:textColor="@color/toss_black_700"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:text="아침"
            android:gravity="center_vertical"
            android:fontFamily="@font/ps_regular"
            android:textSize="18sp"/>
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.03"/>
        <TextView
            android:id="@+id/homeCalendarDialog_textView_morning"
            android:gravity="center_vertical"
            android:layout_width="0dip"
            android:layout_weight="0.82"
            android:layout_height="match_parent"
            android:text="OO약  OO약"
            android:textSize="18sp"
            android:textColor="@color/toss_black_150"
            android:fontFamily="@font/ps_bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="15dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="1">
        <TextView
            android:textColor="@color/toss_black_700"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:text="점심"
            android:gravity="center_vertical"
            android:fontFamily="@font/ps_regular"
            android:textSize="18sp"/>
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.03"/>
        <TextView
            android:id="@+id/homeCalendarDialog_textView_afternoon"
            android:gravity="center_vertical"
            android:layout_width="0dip"
            android:layout_weight="0.82"
            android:layout_height="match_parent"
            android:text="OO약  OO약"
            android:textSize="18sp"
            android:textColor="@color/toss_black_150"
            android:fontFamily="@font/ps_bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="15dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="1">
        <TextView
            android:textColor="@color/toss_black_700"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:text="저녁"
            android:gravity="center_vertical"
            android:fontFamily="@font/ps_regular"
            android:textSize="18sp"/>
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.03"/>
        <TextView
            android:id="@+id/homeCalendarDialog_textView_evening"
            android:gravity="center_vertical"
            android:layout_width="0dip"
            android:layout_weight="0.82"
            android:layout_height="match_parent"
            android:text="OO약  OO약"
            android:textSize="18sp"
            android:textColor="@color/toss_black_150"
            android:fontFamily="@font/ps_bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="15dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="1">
        <TextView
            android:textColor="@color/toss_black_700"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:text="취침"
            android:gravity="center_vertical"
            android:fontFamily="@font/ps_regular"
            android:textSize="18sp"/>
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.03"/>
        <TextView
            android:id="@+id/homeCalendarDialog_textView_night"
            android:gravity="center_vertical"
            android:layout_width="0dip"
            android:layout_weight="0.82"
            android:layout_height="match_parent"
            android:text="OO약  OO약"
            android:textSize="18sp"
            android:textColor="@color/toss_black_150"
            android:fontFamily="@font/ps_bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="RtlHardcoded">
        <TextView
            android:gravity="center|bottom"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="• 복용    "
            android:textSize="16sp"
            android:fontFamily="@font/ps_regular"
            android:textColor="@color/toss_blue_200"/>
        <TextView
            android:gravity="center|bottom"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="• 미복용     "
            android:textSize="16sp"
            android:fontFamily="@font/ps_regular"
            android:textColor="@color/text_red_200"/>
        <TextView
            android:gravity="center|bottom"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="• 복용예정"
            android:textSize="16sp"
            android:fontFamily="@font/ps_regular"
            android:textColor="@color/toss_black_150"/>
    </LinearLayout>
</LinearLayout>