<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:orientation="horizontal"
    android:clickable="true"
    android:focusable="true"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="0.05">
        <TextView
            android:textSize="18sp"
            android:id="@+id/homeAlarmItem_textView_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="1"
            android:fontFamily="@font/ps_regular"
            android:gravity="center"
            android:textColor="@color/toss_blue_200"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="0.06"/>

    <LinearLayout
        android:layout_weight="0.77"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/homeAlarmItem_textView_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="약 이름"
            android:textSize="16sp"
            android:gravity="left"
            android:fontFamily="@font/ps_bold"
            android:textColor="@color/toss_black_700"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="7dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/homeAlarmItem_textView_morning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아침"
                android:textSize="16sp"
                android:fontFamily="@font/ps_regular"
                android:textColor="@color/toss_black_150"/>
            <TextView
                android:layout_marginStart="15dp"
                android:id="@+id/homeAlarmItem_textView_afternoon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="점심"
                android:textSize="16sp"
                android:fontFamily="@font/ps_regular"
                android:textColor="@color/toss_black_150"/>
            <TextView
                android:layout_marginStart="15dp"
                android:id="@+id/homeAlarmItem_textView_evening"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="저녁"
                android:textSize="16sp"
                android:fontFamily="@font/ps_regular"
                android:textColor="@color/toss_black_150"/>
            <TextView
                android:layout_marginStart="15dp"
                android:id="@+id/homeAlarmItem_textView_night"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="취침전"
                android:textSize="16sp"
                android:fontFamily="@font/ps_regular"
                android:textColor="@color/toss_black_150"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:gravity="right"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="0.12">
        <ImageView
            android:id="@+id/homeAlarmItem_imageView_delete"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_close_24"
            app:tint="@color/text_red_200"/>
    </LinearLayout>
</LinearLayout>