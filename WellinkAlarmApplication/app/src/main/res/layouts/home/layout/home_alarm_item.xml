<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/homeAlarmItem_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:orientation="horizontal"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/ripple_white_radius_20"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="0.09">
        <TextView
            android:textSize="21dp"
            android:id="@+id/homeAlarmItem_textView_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="1"
            android:fontFamily="@font/ps_regular"
            android:gravity="center"
            android:textColor="@color/toss_blue_200"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="0.05"/>

    <LinearLayout
        android:layout_weight="0.74"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/drug"/>
            <TextView
                android:id="@+id/homeAlarmItem_textView_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="약 이름"
                android:textSize="18dp"
                android:gravity="left"
                android:fontFamily="@font/ps_bold"
                android:textColor="@color/toss_black_700"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="7dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/homeAlarmItem_textView_morning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아침"
                android:textSize="18dp"
                android:fontFamily="@font/ps_regular"
                android:textColor="@color/toss_black_150"/>
            <TextView
                android:layout_marginStart="15dp"
                android:id="@+id/homeAlarmItem_textView_afternoon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="점심"
                android:textSize="18dp"
                android:fontFamily="@font/ps_regular"
                android:textColor="@color/toss_black_150"/>
            <TextView
                android:layout_marginStart="15dp"
                android:id="@+id/homeAlarmItem_textView_evening"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="저녁"
                android:textSize="18dp"
                android:fontFamily="@font/ps_regular"
                android:textColor="@color/toss_black_150"/>
            <TextView
                android:layout_marginStart="15dp"
                android:id="@+id/homeAlarmItem_textView_night"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="취침"
                android:textSize="18dp"
                android:fontFamily="@font/ps_regular"
                android:textColor="@color/toss_black_150"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="0.12">
        <ImageView
            android:background="?attr/selectableItemBackgroundBorderless"
            android:id="@+id/homeAlarmItem_imageView_delete"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_close_24"
            app:tint="@color/toss_blue_200"/>
    </LinearLayout>
</LinearLayout>