<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WellinkAlarmApplication" parent="Theme.AppCompat.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/toss_blue_200</item>
        <item name="colorPrimaryVariant">@color/toss_blue_700</item>
        <item name="colorOnPrimary">@color/StatusBarColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
        <!-- progress color -->
        <item name="colorAccent">@color/toss_blue_200</item>
    </style>

    <style name="Theme.WellinkAlarmApplication.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Widget.BottomNavigationView"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/ps_regular</item>
    </style>

    <style name="numberPickerCustomSize">
        <item name="android:textSize">24sp</item>
        <item name="android:editTextColor">@color/toss_black_700</item>
    </style>


</resources>